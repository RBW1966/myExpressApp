extends layout

block content
  .w3-container
    if loggedIn
      .main
        h4 You are logged in #{user}!
        <ul id="messages"></ul>
        <form id="form1" action="">
        <input id="m" autocomplete="off" placeholder="Enter text" /><button>Send</button>
        </form>
      <script src="/socket.io/socket.io.js"></script>
      <script src="/javascripts/app.js"></script>
    else
      h4 You are not logged in! Please #[a(href="/login") Log In] to continue.
